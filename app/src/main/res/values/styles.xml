<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogPrefercesOrangeListView" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black_white</item>
        <item name="android:background">@color/recylerviewColor</item>
        <item name="android:textColorAlertDialogListItem">@color/black_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="backgroundColor">@color/white_black</item>
    </style>

    <style name="AlertDialogPrefercesOrange" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black_white</item>
        <item name="android:background">@color/recylerviewColor</item>
        <item name="android:textColorAlertDialogListItem">@color/black_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>